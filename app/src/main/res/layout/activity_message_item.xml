<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/senderImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/icon"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <TextView
        android:id="@+id/tvMessage"
        app:layout_constraintStart_toEndOf="@id/senderImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Received 100 points of Sign up gift.\n\n  - Things you can do with points\n 1. Lesson: Unlocking Special Lessons\n 2. Reading: Unlock Readings\n 3. Writing: Ask a native speaker for correction\n\n  - How to collect points\n 1. Completing General Lessons\n 2. Watching ads\n 3. Purchasing"
        android:textSize="15dp"
        android:textColor="@color/BLACK"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/toggle_purple_transparent_stroke_purple"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/messageDate"
        android:text="19/11/30"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvMessage"
        app:layout_constraintStart_toStartOf="@id/tvMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/isNew"
        app:layout_constraintTop_toTopOf="@id/tvMessage"
        app:layout_constraintEnd_toEndOf="@id/tvMessage"
        android:src="@drawable/red_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>